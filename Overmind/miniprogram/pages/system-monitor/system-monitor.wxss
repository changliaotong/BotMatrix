/* 系统监控页面样式 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 概览卡片 */
.overview-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.update-time {
  font-size: 24rpx;
  color: #999;
}

.overview-stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

/* 性能卡片 */
.performance-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.real-time-stats {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.real-time-stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.real-time-stat .stat-label {
  font-size: 22rpx;
  margin-bottom: 4rpx;
}

.real-time-stat .stat-value {
  font-size: 28rpx;
  font-weight: 600;
}

/* 标签页导航 */
.tab-nav {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  padding: 28rpx 20rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #1989fa;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 10%;
  right: 10%;
  height: 4rpx;
  background: #1989fa;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 标签页内容 */
.tab-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

/* 信息部分 */
.info-section {
  margin-bottom: 40rpx;
}

.info-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 磁盘列表 */
.disk-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.disk-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
}

.disk-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.disk-mount {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.disk-percent {
  font-size: 28rpx;
  color: #666;
  font-weight: 600;
}

.disk-progress {
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.disk-progress-bar {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.disk-stats {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.disk-stat {
  font-size: 22rpx;
  color: #666;
  flex: 1;
  text-align: center;
}

/* 图表部分 */
.chart-section {
  margin-bottom: 40rpx;
}

.chart-section:last-child {
  margin-bottom: 0;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.chart-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.chart-value {
  font-size: 32rpx;
  color: #1989fa;
  font-weight: 600;
}

.chart-legend {
  font-size: 22rpx;
  color: #666;
}

.performance-chart {
  width: 100%;
  height: 300rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  background: #fafafa;
}

/* 连接部分 */
.connection-section {
  margin-top: 40rpx;
}

.connection-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.connection-item {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  border-left: 4rpx solid #1989fa;
}

.connection-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.connection-protocol {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.connection-status {
  font-size: 22rpx;
  font-weight: 500;
}

.connection-addr {
  margin-top: 8rpx;
}

.connection-addr-text {
  font-size: 24rpx;
  color: #666;
  font-family: monospace;
}

/* 进程部分 */
.process-section {
  
}

.process-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.process-item {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  border-left: 4rpx solid #07c160;
}

.process-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.process-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.process-status {
  font-size: 22rpx;
  font-weight: 500;
}

.process-stats {
  display: flex;
  gap: 24rpx;
}

.process-stat {
  font-size: 22rpx;
  color: #666;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #f5f5f5;
  border-top: 4rpx solid #1989fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.error-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.error-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.retry-btn {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #fff;
  background: #1989fa;
  border: none;
  border-radius: 8rpx;
}