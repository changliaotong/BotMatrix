/* pages/logs/logs.wxss */

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.page-actions {
  display: flex;
  gap: 16rpx;
}

.btn-icon {
  margin-right: 8rpx;
}

/* 搜索和筛选栏 */
.filter-bar {
  background: var(--bg-primary);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 80rpx 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  background: var(--bg-secondary);
  transition: border-color 0.3s ease;
}

.search-input:focus {
  border-color: var(--primary-color);
  outline: none;
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: var(--text-tertiary);
}

.filter-controls {
  display: flex;
  gap: 20rpx;
}

.filter-picker {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: var(--bg-secondary);
  border-radius: 8rpx;
  border: 2rpx solid var(--border-color);
  font-size: 26rpx;
  color: var(--text-secondary);
  transition: border-color 0.3s ease;
}

.filter-picker:active {
  border-color: var(--primary-color);
}

.picker-arrow {
  font-size: 20rpx;
  color: var(--text-tertiary);
}

/* 统计信息 */
.stats-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: var(--bg-primary);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 日志容器 */
.logs-container {
  flex: 1;
  background: var(--bg-primary);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 日志列表 */
.logs-list {
  padding: 20rpx;
}

.log-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: var(--bg-secondary);
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.log-item:last-child {
  margin-bottom: 0;
}

.log-item.selected {
  border-color: var(--primary-color);
  background: rgba(24, 144, 255, 0.05);
}

.log-item:active {
  transform: scale(0.98);
}

/* 选择框 */
.log-select {
  margin-right: 20rpx;
  padding: 20rpx 0;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 4rpx;
  background: var(--bg-primary);
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: var(--primary-color);
  border-color: var(--primary-color);
  position: relative;
}

.checkbox.checked::after {
  content: '✓';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
}

/* 日志内容 */
.log-content {
  flex: 1;
  min-width: 0;
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.log-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
  flex-shrink: 0;
}

.log-level {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.level-debug {
  background: rgba(100, 100, 100, 0.1);
  color: #666;
}

.level-info {
  background: rgba(24, 144, 255, 0.1);
  color: var(--primary-color);
}

.level-warning {
  background: rgba(250, 173, 20, 0.1);
  color: var(--warning-color);
}

.level-error {
  background: rgba(255, 77, 79, 0.1);
  color: var(--error-color);
}

.level-critical {
  background: rgba(255, 77, 79, 0.2);
  color: var(--error-color);
  font-weight: 600;
}

.log-body {
  margin-bottom: 12rpx;
}

.log-message {
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.5;
  word-break: break-all;
}

.log-bot {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  font-size: 24rpx;
}

.bot-label {
  color: var(--text-tertiary);
  margin-right: 8rpx;
}

.bot-id {
  color: var(--text-secondary);
  font-family: monospace;
}

.log-footer {
  margin-top: 12rpx;
}

.log-metadata {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.metadata-item {
  padding: 4rpx 8rpx;
  background: var(--bg-primary);
  border-radius: 4rpx;
  font-size: 20rpx;
  color: var(--text-tertiary);
  font-family: monospace;
}

/* 操作按钮 */
.log-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-left: 16rpx;
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
  border: none;
  background: none;
  font-size: 24rpx;
  color: var(--text-tertiary);
  border-radius: 4rpx;
  transition: all 0.3s ease;
}

.btn-icon:active {
  background: var(--bg-primary);
  color: var(--primary-color);
}

/* 加载更多 */
.load-more,
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: var(--text-tertiary);
}

.load-more .loading-spinner {
  margin-right: 16rpx;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: var(--bg-primary);
  border-radius: 12rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.btn-close {
  width: 48rpx;
  height: 48rpx;
  border: none;
  background: none;
  font-size: 28rpx;
  color: var(--text-tertiary);
  border-radius: 4rpx;
}

.modal-body {
  padding: 24rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.export-info {
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: var(--bg-secondary);
  border-radius: 8rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  text-align: center;
}

.export-format {
  margin-bottom: 20rpx;
}

.format-label {
  display: block;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.format-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.format-option {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: var(--bg-secondary);
  border-radius: 8rpx;
  transition: background-color 0.3s ease;
}

.format-option:active {
  background: rgba(24, 144, 255, 0.1);
}

.format-option radio {
  margin-right: 16rpx;
}

.format-option text {
  font-size: 28rpx;
  color: var(--text-primary);
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  border-top: 1rpx solid var(--border-color);
}

.modal-footer .btn {
  flex: 1;
}

.btn-default {
  background: var(--bg-secondary);
  color: var(--text-secondary);
}

.btn-default:active {
  background: var(--border-color);
}

/* 空状态 */
.empty-image {
  opacity: 0.5;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .search-input,
  .filter-picker {
    background: var(--bg-secondary);
    border-color: var(--border-color);
    color: var(--text-primary);
  }
  
  .log-item {
    background: var(--bg-secondary);
  }
  
  .metadata-item {
    background: var(--bg-primary);
  }
  
  .export-info,
  .format-option {
    background: var(--bg-secondary);
  }
  
  .btn-default {
    background: var(--bg-secondary);
    color: var(--text-primary);
  }
  
  .btn-default:active {
    background: var(--border-color);
  }
}

/* 响应式布局 */
@media (min-width: 768px) {
  .filter-controls {
    flex-direction: row;
  }
  
  .filter-picker {
    flex: 1;
  }
  
  .log-item {
    padding: 32rpx;
  }
  
  .log-header {
    margin-bottom: 16rpx;
  }
  
  .log-message {
    font-size: 30rpx;
  }
  
  .log-time {
    font-size: 26rpx;
  }
  
  .log-level {
    font-size: 24rpx;
  }
}