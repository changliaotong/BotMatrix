/* 机器人详情页面样式 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 机器人信息卡片 */
.bot-info-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.bot-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.bot-basic-info {
  flex: 1;
}

.bot-name-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.bot-name {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-right: 16rpx;
}

.bot-id {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.bot-platform {
  margin-bottom: 12rpx;
}

.platform-badge {
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.platform-qq {
  background: #12b7f5;
  color: #fff;
}

.platform-wechat {
  background: #07c160;
  color: #fff;
}

.platform-telegram {
  background: #0088cc;
  color: #fff;
}

.platform-discord {
  background: #5865f2;
  color: #fff;
}

.bot-status-info {
  text-align: right;
}

.status-indicator-wrapper {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 8rpx;
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-text {
  font-size: 28rpx;
  font-weight: 500;
}

.uptime-text {
  font-size: 24rpx;
  color: #999;
}

/* 统计信息 */
.bot-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
  padding: 24rpx 0;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 操作按钮 */
.bot-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
  font-weight: 500;
}

.btn-start {
  background: #07c160;
  color: #fff;
}

.btn-stop {
  background: #ee0a24;
  color: #fff;
}

.btn-restart {
  background: #ff976a;
  color: #fff;
}

.btn-delete {
  background: #969799;
  color: #fff;
}

/* 标签页导航 */
.tab-nav {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  padding: 28rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #1989fa;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  right: 20%;
  height: 4rpx;
  background: #1989fa;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 标签页内容 */
.tab-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

/* 信息部分 */
.info-section {
  margin-bottom: 40rpx;
}

.info-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 日志容器 */
.logs-container {
  max-height: 800rpx;
  overflow-y: auto;
}

.log-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.log-time {
  font-size: 24rpx;
  color: #999;
}

.log-level {
  font-size: 22rpx;
  font-weight: 600;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  background: rgba(0, 0, 0, 0.05);
}

.log-message {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
  display: block;
}

.log-source {
  font-size: 22rpx;
  color: #999;
  display: block;
}

.empty-logs {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 配置容器 */
.config-container {
  
}

.config-section {
  margin-bottom: 40rpx;
}

.config-section:last-child {
  margin-bottom: 0;
}

.config-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.config-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.config-textarea {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 16rpx;
}

.config-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.config-textarea-input {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  font-size: 26rpx;
  color: #333;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 12rpx;
  line-height: 1.5;
}

.config-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.config-btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
  font-weight: 500;
}

.btn-edit {
  background: #1989fa;
  color: #fff;
}

.btn-save {
  background: #07c160;
  color: #fff;
}

.btn-cancel {
  background: #969799;
  color: #fff;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #f5f5f5;
  border-top: 4rpx solid #1989fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.error-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.error-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.retry-btn {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #fff;
  background: #1989fa;
  border: none;
  border-radius: 8rpx;
}