/* pages/settings/settings.wxss */

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.page-actions {
  display: flex;
  gap: 16rpx;
}

/* 标签页导航 */
.tab-nav {
  display: flex;
  background: var(--bg-primary);
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow-x: auto;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 12rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.tab-item.active {
  background: var(--primary-color);
  color: #fff;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.tab-item:not(.active) {
  color: var(--text-secondary);
}

.tab-item:not(.active):active {
  background: var(--bg-secondary);
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-label {
  font-size: 24rpx;
  font-weight: 500;
}

/* 设置内容 */
.settings-content {
  flex: 1;
  background: var(--bg-primary);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.settings-section {
  padding: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--border-color);
}

/* 设置项 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-info {
  flex: 1;
  margin-right: 24rpx;
}

.setting-label {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.setting-desc {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 选择器样式 */
.picker-value {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: var(--bg-secondary);
  border-radius: 8rpx;
  border: 2rpx solid var(--border-color);
  font-size: 28rpx;
  color: var(--text-primary);
  min-width: 200rpx;
  transition: border-color 0.3s ease;
}

.picker-value:active {
  border-color: var(--primary-color);
}

.picker-arrow {
  margin-left: 16rpx;
  font-size: 20rpx;
  color: var(--text-tertiary);
}

/* 输入框样式 */
.setting-input {
  width: 200rpx;
  padding: 16rpx 24rpx;
  background: var(--bg-secondary);
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  text-align: right;
  transition: border-color 0.3s ease;
}

.setting-input:focus {
  border-color: var(--primary-color);
  outline: none;
}

/* 开关样式 */
switch {
  transform: scale(0.9);
}

/* 关于页面 */
.about-card {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  color: #fff;
}

.app-logo {
  margin-right: 32rpx;
}

.logo-text {
  font-size: 64rpx;
}

.app-info {
  flex: 1;
}

/* 账户设置样式 */
.user-info-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: var(--bg-secondary);
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  background: var(--primary-color);
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 30rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 24rpx;
  color: var(--text-secondary);
  background: rgba(24, 144, 255, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

.setting-arrow {
  color: var(--text-tertiary);
  font-size: 32rpx;
}

.logout-btn-container {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.logout-btn {
  width: 100% !important;
  background: #ff4d4f !important;
  color: #fff !important;
  border: none !important;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 85%;
  background: var(--bg-primary);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-close {
  font-size: 48rpx;
  color: var(--text-tertiary);
  padding: 10rpx;
}

.modal-body {
  padding: 40rpx;
}

.modal-form-item {
  margin-bottom: 30rpx;
}

.modal-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.modal-input {
  width: 100%;
  height: 90rpx;
  background: var(--bg-secondary);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.modal-footer {
  padding: 20rpx 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
}

.modal-footer .btn {
  flex: 1;
  margin: 0 !important;
}

.btn-secondary {
  background: var(--bg-secondary) !important;
  color: var(--text-primary) !important;
  border: 1rpx solid var(--border-color) !important;
}

.btn-danger {
  background: #ff4d4f !important;
  color: #fff !important;
}

.about-footer {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.footer-text {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.app-version {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.app-desc {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.4;
}

.about-section {
  background: var(--bg-primary);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.about-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.3s ease;
}

.about-item:last-child {
  border-bottom: none;
}

.about-item:active {
  background: var(--bg-secondary);
}

.about-label {
  font-size: 30rpx;
  color: var(--text-primary);
}

.about-arrow {
  font-size: 32rpx;
  color: var(--text-tertiary);
}

.about-footer {
  text-align: center;
  padding: 40rpx 24rpx;
  color: var(--text-tertiary);
}

.footer-text {
  display: block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .tab-item:not(.active) {
    color: var(--text-secondary);
  }
  
  .tab-item:not(.active):active {
    background: var(--border-color);
  }
  
  .picker-value,
  .setting-input {
    background: var(--bg-secondary);
    border-color: var(--border-color);
    color: var(--text-primary);
  }
  
  .picker-value:active,
  .setting-input:focus {
    border-color: var(--primary-color);
  }
  
  .about-item:active {
    background: var(--border-color);
  }
}

/* 响应式布局 */
@media (min-width: 768px) {
  .tab-nav {
    flex-direction: row;
    justify-content: center;
  }
  
  .tab-item {
    flex-direction: row;
    padding: 20rpx 32rpx;
    min-width: auto;
  }
  
  .tab-icon {
    margin-right: 12rpx;
    margin-bottom: 0;
  }
  
  .settings-section {
    padding: 32rpx;
  }
  
  .setting-item {
    padding: 32rpx 0;
  }
  
  .setting-label {
    font-size: 32rpx;
  }
  
  .setting-desc {
    font-size: 28rpx;
  }
  
  .about-card {
    padding: 48rpx;
  }
  
  .app-name {
    font-size: 40rpx;
  }
  
  .about-item {
    padding: 32rpx;
  }
  
  .about-label {
    font-size: 32rpx;
  }
}