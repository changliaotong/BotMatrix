{
  "id": "com.botmatrix.plugin.supergroupmanager",
  "name": "超级群管系统",
  "version": "1.0.0",
  "author": "BotMatrix AI",
  "description": "基于 C# SDK 开发的超级群管系统，支持关键词拦截、禁言、踢人、警告系统及交互式配置。",
  "entry": "dotnet run --project SuperGroupManager.csproj",
  "run_on": ["worker"],
  "permissions": [
    "send_message",
    "send_image",
    "kick_user",
    "mute_user",
    "delete_message",
    "get_group_info",
    "get_group_member_info",
    "storage.set",
    "storage.get"
  ],
  "events": [
    "on_message",
    "on_group_message",
    "on_group_increase",
    "on_group_decrease"
  ],
  "intents": [
    {
      "name": "group_config",
      "keywords": ["群设置", "群管设置", "管理面板"],
      "priority": 10
    },
    {
      "name": "black_list",
      "keywords": ["黑名单", "封禁列表"],
      "priority": 10
    }
  ]
}
