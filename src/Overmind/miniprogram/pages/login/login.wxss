/* 登录页面样式 */

/* 页面容器 */
.login-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

/* 登录表单 */
.login-form {
  width: 90%;
  max-width: 650rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 60rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  box-sizing: border-box;
}

/* 标题 */
.login-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 10rpx;
}

/* 副标题 */
.login-subtitle {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-bottom: 60rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

/* 表单标签 */
.form-label {
  display: block;
  font-size: 28rpx;
  color: #555;
  margin-bottom: 12rpx;
  font-weight: 500;
}

/* 表单输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.form-input:focus {
  border-color: #667eea;
  outline: none;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  transition: opacity 0.3s ease;
}

.login-btn:hover {
  opacity: 0.9;
}

.login-btn:active {
  opacity: 0.8;
}

.login-btn:disabled {
  background: #cccccc;
  opacity: 0.8;
}

/* 错误提示 */
.error-message {
  font-size: 24rpx;
  color: #ff4d4f;
  text-align: center;
  margin-top: 20rpx;
  padding: 10rpx;
}

/* 调试信息 */
.debug-info {
  margin-top: 40rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 10rpx;
  border: 1rpx dashed #ddd;
}

.debug-info text {
  display: block;
  font-size: 22rpx;
  color: #888;
  margin-bottom: 10rpx;
  text-align: center;
}

/* 响应式设计 */
@media (max-width: 375rpx) {
  .login-form {
    padding: 40rpx;
  }
  
  .login-title {
    font-size: 40rpx;
  }
  
  .login-subtitle {
    font-size: 22rpx;
    margin-bottom: 40rpx;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.login-form {
  animation: fadeIn 0.5s ease-out;
}