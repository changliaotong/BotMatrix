/* 首页样式 */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.container {
  padding: 20rpx;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.stats-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-value {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.stats-label {
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: 400;
}

/* 系统状态卡片 */
.status-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.status-indicator {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-online {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-offline {
  background-color: #fff1f0;
  color: #ff4d4f;
}

/* 状态项 */
.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.status-item:last-child {
  border-bottom: none;
}

.status-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
}

.status-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 进度条样式 */
.progress-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.progress-bar {
  width: 200rpx;
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-fill.cpu {
  background: linear-gradient(90deg, #1890ff 0%, #52c41a 100%);
}

.progress-fill.memory {
  background: linear-gradient(90deg, #fa8c16 0%, #fadb14 100%);
}

/* 告警卡片 */
.alert-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #fa8c16;
}

.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.alert-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.alert-count {
  background-color: #fff7e6;
  color: #fa8c16;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.alert-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.alert-item:last-child {
  border-bottom: none;
}

.alert-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.alert-text {
  flex: 1;
}

.alert-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.alert-time {
  font-size: 24rpx;
  color: #999;
}

/* 快速操作网格 */
.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin: -10rpx;
}

.action-item {
  padding: 10rpx;
}

.action-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.action-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.12);
}

.action-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.action-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #999;
}

/* 机器人状态卡片 */
.bot-summary-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.bot-summary-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.bot-summary-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.bot-summary-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.status-dot.online {
  background-color: #52c41a;
}

.status-dot.offline {
  background-color: #ff4d4f;
}

.bot-summary-stats {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.bot-stat {
  text-align: center;
}

.bot-stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.bot-stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in-up {
  animation: fadeInUp 0.4s ease-out;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

.pulse {
  animation: pulse 2s infinite;
}